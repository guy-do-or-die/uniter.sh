{
  "name": "uniter.sh",
  "version": "1.0.0",
  "type": "module",
  "description": "Unite all your onchain dust and scattered assets into a single token in one smart command",
  "main": "dist/cli/cli.js",
  "bin": {
    "uniter.sh": "./dist/cli/cli.js"
  },
  "scripts": {
    "build:web": "vite build",
    "build": "tsc && bun run build:web",
    "dev:api": "vercel dev --listen 3001",
    "dev:cli": "bun run cli/cli.ts",
    "dev:web": "vite",
    "start:web": "vite preview",
    "start:cli": "bun run cli/cli.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "defi",
    "1inch",
    "token-swap",
    "cli",
    "ethereum",
    "multichain"
  ],
  "author": "guy-do-or-die",
  "license": "MIT",
  "dependencies": {
    "@farcaster/miniapp-sdk": "^0.1.8",
    "@reown/appkit": "^1.0.0",
    "@reown/appkit-adapter-wagmi": "^1.0.0",
    "@types/inquirer": "^9.0.8",
    "@vercel/kv": "^1.0.1",
    "@wagmi/connectors": "^5.9.0",
    "@wagmi/core": "^2.18.0",
    "@walletconnect/sign-client": "^2.21.5",
    "@walletconnect/types": "^2.21.5",
    "@walletconnect/utils": "^2.21.5",
    "@xterm/addon-fit": "^0.10.0",
    "axios": "^1.6.7",
    "chalk": "^5.4.1",
    "citty": "^0.1.6",
    "dotenv": "^17.2.1",
    "inquirer": "^12.9.0",
    "ora": "^8.0.1",
    "qrcode-terminal": "^0.12.0",
    "viem": "^2.33.1",
    "wagmi": "^2.16.0",
    "xterm": "^5.3.0",
    "zx": "^7.2.3"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/node": "^5.3.8",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vercel": "^44.7.0",
    "vite": "^7.0.6",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
